<%- include('header', { title: 'Login' }); -%>

<div class="container">
    <h1>Login</h1>
    
    <form action="/login" method="POST">
        <label for="user_email">Email</label>
        <input type="email" class="input" name="_email" id="user_email" placeholder="Enter your email">

        <label for="user_pass">Password</label>
        <input type="password" class="input" name="_password" id="user_pass" placeholder="Enter your password">

        <% if (typeof error !== 'undefined') { %>
            <div class="err-msg"><%= error %></div>
        <% } %>

        <input type="submit" value="Login">
        
        <div class="link">
            <a href="/signup">Sign Up</a>
        </div>
    </form>

    <hr>

    <div class="oauth-login">
        <p>Or login with:</p>
        <a href="/auth/github" class="github-btn">Login with GitHub</a>
        <a href="/auth/google" class="google-btn">Login with Google</a>
    </div>
</div>

<%- include('footer'); -%>